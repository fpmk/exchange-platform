{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "declaration": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "declarationMap": false,
    "skipLibCheck": true,
    "types": ["jest"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
